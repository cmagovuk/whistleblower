<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl"><%= t(".page_title") %></h1>

        <%= t(".guidance_html") %>

        <% if params["login"].present? %>
            <%= t(".login_error_summary_html") %>
        <% end %>

        <%= form_for :login do |f| %>
            <%= f.govuk_password_field(:reports_password, label: { text: t(".password"), tag: "h2", size: "l" }, hint: { text: t(".security_message") }) %>
            <% if params["login"].present? %>
                <%= t(".login_error_html") %>
            <% end %>
            <%= f.submit t(".submit"), class: "govuk-button" %>
        <% end %>

    </div>
</div>