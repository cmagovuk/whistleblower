<% title(t(".page_title")) %>

<div class="govuk-width-container">

    <%= link_to t("link.back"), "/wizard/" + @submission.router.previous_page(:include_contact).to_s , class: "govuk-back-link ga-pageLink" %>

    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

            <%= form_for @submission, url: wizard_include_contact_path, method: :post do |f| %>
                    
              <%
              options = [
                OpenStruct.new(id: "yes", name: "Yes"),
                OpenStruct.new(id: "no", name: "No"),
              ]
              %>

              <%= f.govuk_collection_radio_buttons :include_contact, options, :id, :name, legend: { text: t(".page_title"), size: "xl" }, hint: { text: t(".hint_html") } %>

              <%= f.govuk_submit %>
                
            <% end %>

            </div>
        </div>
    </main>
</div>