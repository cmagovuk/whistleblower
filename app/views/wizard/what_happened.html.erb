<% title(t('.page_title')) %>

<div class="govuk-width-container">
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <%= link_to t("link.back"), "/wizard/" + @submission.router.previous_page(:what_happened).to_s , class: "govuk-back-link ga-pageLink" %>

                <%= form_for @submission, url: wizard_what_happened_path, :method => :post do |f| %>

                    <%= f.govuk_text_area :what_happened, label: { text: t('.page_title'), size:"xl" }, max_chars: 5000, hint: {text: t('.hint_html') }, rows:10 %>
                    
                    <%= f.govuk_submit %>
                    
                <% end %>

            </div>
        </div>
    </main>
</div>